<?xml version="1.0" encoding="utf-8"?>
<manifest package="in.nash.showtime"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:name=".ShowtimeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <meta-data android:name="AA_DB_NAME" android:value="showtime.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="1" />
        <meta-data
            android:name="AA_MODELS"
            android:value="in.nash.showtime.model.Movie" />

        <activity
            android:name=".ui.view.impl.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.view.impl.MovieDetailActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.AboutActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.LoginActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.AttributionsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.FeatureRequestActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.PersonActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.ReviewActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.ReviewListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.PersonListActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.SettingsActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.FeedbackActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".ui.view.impl.ProfileActivity"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>
